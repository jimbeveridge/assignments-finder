{
    "name": "Homework Frosting for Microsoft Teams",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Extract homework assignments from Microsoft Teams. Click the cupcake button while you are in Teams in your Chrome browser.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/bg/background.html",
        "persistent": false
    },
    "options_page": "src/options/options.html",
    "page_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Assignments Finder"
    },
    "permissions": [
        "https://assignments.onenote.com/",
        "*://assignments.onenote.com/",
        "https://teams.microsoft.com/",
        "*://teams.microsoft.com/",
        "storage",
        "declarativeContent",
        "activeTab",
        "cookies",
        "activeTab",
        "clipboardWrite"
    ]
}
