{
    "name": "Homework Frosting",
    "version": "0.2.0",
    "manifest_version": 2,
    "description": "Create a simple, easy-to-read report of your student's assignments in Microsoft Teams and optionally sync to the myHomework app.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "bg/background.html",
        "persistent": false
    },
    "options_page": "options/options.html",
    "page_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Homework Frosting"
    },
    "permissions": [
        "https://teams.microsoft.com/",
        "*://teams.microsoft.com/",
        "https://assignments.onenote.com/",
        "*://assignments.onenote.com/",
        "https://myhomeworkapp.com/",
        "storage",
        "declarativeContent",
        "activeTab",
        "clipboardWrite"
    ]
}
